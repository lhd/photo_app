<h1> Search results: </h1>

<% if @matching_users.size == 0 %>
	Sorry, no user with that name found.
<% else %>
	<table>
	  <tr>
	    <th>Name</th>
	    <th>Email</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	<% @matching_users.each do | user | %>
	  <tr>
	    <td><%= user.name %></td>
	    <td><%= user.email %></td>
	    <td><%= user.password %></td>
	    <td><%= link_to 'Show', user %></td>
	    <td><%= link_to 'Add as friend', add_friendship_url(user) %></td>
	  </tr>
	<% end %>
	</table>
<% end %>
