<!DOCTYPE html>
<html>
  <head>
	<meta charset="UTF-8">
    <title><%= title %></title>
    <%= csrf_meta_tag %>

	<%= javascript_include_tag :defaults %>	
	<script src="/javascripts/jquery-ui.custom.min.js" type="text/javascript"></script>
	<%= render 'layouts/stylesheets' %>	
	<link href="/stylesheets/navigation.css" media="screen" rel="stylesheet" type="text/css" />

  <%= yield :head %>

  </head>
  <body>
    <div class="container">
    	
	  <%= render 'layouts/header' %>	
	  
	  <section class="round">
	  	<div style="clear:both">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
		</div>
      </section>	 
	  
	  <%= render 'layouts/footer' %>
	  <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
